{
  "name": "mcp-proxy-server",
  "version": "1.0.0",
  "description": "MCP stdio-to-HTTP proxy server for sharing MCP servers across Claude Code sessions",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "mcp:start": "./scripts/mcp-proxy.sh start",
    "mcp:stop": "./scripts/mcp-proxy.sh stop",
    "mcp:restart": "./scripts/mcp-proxy.sh restart",
    "mcp:status": "./scripts/mcp-proxy.sh status",
    "mcp:log": "./scripts/mcp-proxy.sh log"
  },
  "keywords": ["mcp", "proxy", "claude-code"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "bun-types": "^1.3.7"
  }
}
